{% for cat in work.data.categories %}
{% if loop.first %}<ul style="display: flex; flex-direction: row; flex-wrap: wrap; gap: 6px">{% endif %}
<li>
	<h4 class="c-title__xs l-text__lightgreen" style="display: flex;"><p class="l-text__red">#</p>{{ cat }}{% if not loop.last %},{% endif %}</h4>
</li>
{% if loop.last %}</ul>{% endif %}
{% endfor %}
<h3 class="c-title__m l-text__white"><strong class="l-text__green">{{ work.data.name }}</strong>, {{ work.data.introduction }}</h3>
<p class="c-text__m l-text__lightgrey l-padding__s@small l-padding__m@medium l-padding__none@large">{{ work.data.resume }}</p>

