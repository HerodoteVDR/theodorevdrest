{% extends "src/_layouts/base.njk" %}

{% set bannerImage = "/assets/img/home-banner.jpg" %}
{% set bannerImage2 = "/assets/img/home-home.jpg" %}

{% block content %}
	<div class="o-container">
		<section class="c-pagesection">
			{% include "src/_components/banner.njk" %}
		</section>
		<section class="c-pagesection" style="margin-bottom: 42px;">
			<div class="o-separator l-bgcol__darkred"></div>
		</section>
		<section class="c-pagesection">
			<div class="l-grid--3cols@medium">
				<div>
					<h4 class="l-text__red c-title__xs l-padding__m@small">My experience</h4>
				</div>
				{% for experience in experiences %}
				{% if loop.first %}<ul class="l-grid_item--2c@medium l-grid--2cols@large">{% endif %}
					<li class="l-padding__l@small l-padding__l@medium l-padding__l@large">
						<h2 class="l-text__lightgreen c-title__m">{{ experience.title }}</h2>
						<div class="l-padding__m@small l-padding__m@medium l-padding__m@large">
							<div class="o-separator l-bgcol__darkred"></div>
						</div>
						<p>{{ experience.desc }}</p>
					</li>
				{% if loop.last %}</ul>{% endif %}
				{% endfor %}
			</div>
		</section>
		<div class="l-padding__m@large l-padding__l@medium l-padding__l@small">
			{% include "src/_components/big-contact.njk" %}
		</div>
	</div>
{% endblock %}
